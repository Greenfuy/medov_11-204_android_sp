<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="220dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAgeNumber"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editNameText"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="Enter your name..."
        android:inputType="text"
        android:text=""
        android:maxLength="50"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editHeightNumber"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter your height..."
        android:inputType="number"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNameText" />

    <EditText
        android:id="@+id/editWeightNumber"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter your weight..."
        android:inputType="numberDecimal"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editHeightNumber" />

    <EditText
        android:id="@+id/editAgeNumber"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter your age..."
        android:inputType="number"
        android:text=""
        android:textColor="#FFFFFF"
        android:textColorHint="#B3B3B3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editWeightNumber" />

    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="167dp"
        android:layout_height="51dp"
        android:layout_marginBottom="44dp"
        android:text=""
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startButton" />


</androidx.constraintlayout.widget.ConstraintLayout>